{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 20 },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev (no tests)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HFT_ENABLE_TESTS": "OFF"
      }
    },
    {
      "name": "test",
      "displayName": "Test (with gtests)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-test",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "HFT_ENABLE_TESTS": "ON"
      }
    }
  ],
  "buildPresets": [
    { "name": "dev",  "configurePreset": "dev"  },
    { "name": "test", "configurePreset": "test" }
  ],
  "testPresets": [
    {
      "name": "test",
      "configurePreset": "test",
      "output": { "outputOnFailure": true }
    }
  ]
}
